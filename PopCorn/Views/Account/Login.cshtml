@model LoginModel

<h2>Вход на сайт</h2>

<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label class="data-label" asp-for="Email">Введите Email</label>
            <input class="data-input" type="text" asp-for="Email" />
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <label class="data-label" asp-for="Password">Введите пароль</label>
            <input class="data-input" asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Войти" class="btn" />
        </div>
    </div>
</form>
<br />
<a asp-action="Register" asp-controller="Account">Регистрация</a>